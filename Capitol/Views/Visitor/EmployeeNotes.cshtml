@model ReportsDTO

<div>
    <div class="d-flex justify-content-start">
        <form asp-controller="Visitor" asp-action="EmployeeNotes" class="mt-2" method="post">
            <div class="d-flex justify-content-center mt-5 mx-5 align-items-center flex-column">
                <div class="d-flex my-3 justify-content-between">
                    <input asp-for="@Model.Report.Reporter" placeholder="Gönderen" type="text" class="form-control" autocomplete="off" />
                    <div class="d-flex align-items-center justify-content-center">
                        <button class="btn btn-primary mx-3">Ekle</button>
                    </div>
                </div>
                <textarea placeholder="Notunuz..." class="form-control" asp-for="@Model.Report.ReportMessage" style="width:400px; height:250px"></textarea>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
        </form>

        <div class="mt-5">
            @foreach (var report in Model.ReportList.OrderByDescending(x=> x.ReportDate))
            {
                <div class="d-flex form-control flex-column m-2" style="width:1000px">
                    <div class="d-flex">
                        <div class="mx-3" style="font-weight:600;">
                            @report.ReportDate.ToString("d MMMM - HH:mm")
                        </div>
                        <div class="mx-3" style="font-weight:700;">
                            @report.Reporter
                        </div>
                    </div>
                    <hr />
                    <div style="font-size: 25px; font-weight: 500;" class="mx-3 mb-3">
                        @report.ReportMessage
                    </div>
                    <div class="mx-3 d-flex justify-content-end">
                        <a asp-controller="Visitor" asp-action="NoteDelete" asp-route-id="@report.ReportId" class="btn btn-danger ">Sil</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts{ 
    <partial name="_ValidationScriptsPartial"/>
}