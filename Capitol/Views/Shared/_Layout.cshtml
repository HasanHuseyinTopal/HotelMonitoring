<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link rel="icon" href="~/Images/Capitol.png" type="image/x-icon" />
    <title>@ViewData["Title"]  Capitol</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
</head>
<body>
    <div id="symbol" style="user-select:none;"><span>CAPİTOL</span></div>
    <section style="user-select:none;">
        <nav class="navbar navbar-expand navbar-dark ftco_navbar bg-dark ftco-navbar-light" id="ftco-navbar">
            <div class="container">
                <div class="collapse navbar-collapse d-flex justify-content-between" id="ftco-nav">
                    <div>
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item"><a asp-controller="Visitor" asp-action="DailyVisitors" class="nav-link">Odalar</a></li>
                            <li class="nav-item"><a asp-controller="Visitor" asp-action="MonthlyView" class="nav-link">Blokaj</a></li>
                            <li class="nav-item"><a asp-controller="Visitor" asp-action="AvailabilityCheck" class="nav-link">Takvim</a></li>
                        </ul>
                    </div>
                    <div>
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item"><a asp-controller="Visitor" asp-action="EmployeeNotes" class="nav-link">Not</a></li>
                            <li class="nav-item"><a asp-controller="Visitor" asp-action="VisitorSearch" class="nav-link">Arama</a></li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="dropdown04" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Linkler</a>
                                <div class="dropdown-menu" style="background-color:silver" aria-labelledby="dropdown04">
                                    <a class="dropdown-item" target="_blank" href="https://kbs.egm.gov.tr">Emniyet</a>
                                    <a class="dropdown-item" target="_blank" href="https://nlbui.edmbilisim.com.tr/EFaturaUI/Invoice/OutgoingInvoicesSend.aspx">E-Arşiv</a>
                                    <a class="dropdown-item bg-success" target="_blank" href="http://mail.hotelperacapitol.com/#1">Mail</a>
                                    <a class="dropdown-item bg-success" target="_blank" href="https://admin.booking.com/hotel/hoteladmin/extranet_ng/manage/calendar/index.html?hotel_id=241733&ses=19b59cee15402e9e8b23ce7f81438882&lang=tr&source=nav">Booking</a>
                                    <a class="dropdown-item bg-success" target="_blank" href="https://apps.expediapartnercentral.com/lodging/roomsandrates/ratesAndAvail.html?htid=2539041&_ga=2.50317605.2006133424.1684386652-762148546.1673517939">Expedia</a>
                                </div>
                            </li>
                        </ul>
                    </div>
                    <div class="position-absolute" style="right:100px;">
                        <ul class="navbar-nav me-0">
                            @if (User.Identity!.IsAuthenticated)
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="dropdown04" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">@User.Identity.Name</a>
                                    <div class="dropdown-menu" style="background-color:silver" aria-labelledby="dropdown04">
                                        <a class="dropdown-item bg-warning" asp-controller="Administration" asp-action="Management">Yönetim Paneli</a>
                                        <a class="dropdown-item bg-danger" asp-controller="Account" asp-action="LogOut">Çıkış</a>
                                    </div>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item"><a asp-controller="Account" asp-action="Login" class="nav-link">Giriş</a></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </section>
    @RenderBody()
    <script src="~/lib/Chart.js/chart.umd.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/sweetalert2/sweetalert2.all.min.js"></script>
    <script src="~/lib/html2pdf.js/html2pdf.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
